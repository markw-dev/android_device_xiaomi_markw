<device name="Android">
  <!-- Most values are the incremental current used by a feature,
       in mA (measured at nominal voltage).
       The default values are deliberately incorrect dummy values.
       OEM's must measure and provide actual values before
       shipping a device.
       Example real-world values are given in comments, but they
       are totally dependent on the platform and can vary
       significantly, so should be measured on the shipping platform
       with a power meter. -->
  <item name="none">0</item>
  <item name="screen.on">120</item>  <!-- ~200mA -->
  <item name="bluetooth.active">70</item> <!-- Bluetooth data transfer, ~10mA -->
  <item name="bluetooth.on">1</item>  <!-- Bluetooth on & connectable, but not connected, ~0.1mA -->
  <item name="screen.full">320</item>  <!-- ~300mA -->
  <item name="wifi.on">3</item>  <!-- ~3mA -->
  <item name="wifi.active">130</item>  <!-- WIFI data transfer, ~200mA -->
  <item name="wifi.scan">130</item>  <!-- WIFI network scanning, ~100mA -->
  <item name="dsp.audio">50</item> <!-- ~10mA -->
  <item name="dsp.video">300</item> <!-- ~50mA -->
  <item name="radio.active">140</item> <!-- ~200mA -->
  <item name="radio.scanning">10</item> <!-- cellular radio scanning for signal, ~10mA -->
  <item name="gps.on">40</item> <!-- ~50mA -->
  <!-- Current consumed by the radio at different signal strengths, when paging -->
  <array name="radio.on"> <!-- Strength 0 to BINS-1 -->
      <value>10</value> <!-- ~2mA -->
      <value>5</value> <!-- ~1mA -->
  </array>
  <!-- Different CPU speeds as reported in
       /sys/devices/system/cpu/cpu0/cpufreq/stats/time_in_state -->
  <array name="cpu.speeds">
      <value>652800</value>
      <value>1036800</value>
      <value>1401600</value>
      <value>1689600</value>
      <value>1843200</value>
      <value>1958400</value>
      <value>2016000</value>
  </array>
  <!-- Current when CPU is idle -->
  <item name="cpu.idle">3</item>
  <!-- Current at each CPU speed, as per 'cpu.speeds' -->
  <array name="cpu.active">
      <value>115</value>
      <value>140</value>
      <value>200</value>
      <value>230</value>
      <value>270</value>
      <value>320</value>
      <value>370</value>
  </array>
  <!-- This is the battery capacity in mAh (measured at nominal voltage) -->
  <item name="battery.capacity">2920</item>

  <array name="wifi.batchedscan"> <!-- mA -->
      <value>.0002</value> <!-- 1-8/hr -->
      <value>.002</value>  <!-- 9-64/hr -->
      <value>.02</value>   <!-- 65-512/hr -->
      <value>.2</value>    <!-- 513-4,096/hr -->
      <value>2</value>    <!-- 4097-/hr -->
  </array>
</device>
